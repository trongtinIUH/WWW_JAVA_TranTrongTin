<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="baitap_9_21" transaction-type="JTA">
        <jta-data-source>jdbc/MyDataSource</jta-data-source>
        <class>com.example.baitap_9_21.backend.repositories.entities.Product</class>
        <class>com.example.baitap_9_21.backend.repositories.entities.ProductPrice</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/> <!-- Hoặc create nếu bạn muốn tạo mới -->
        </properties>
    </persistence-unit>
</persistence>
